{
  "version": 6,
  "cmakeMinimumRequired": { "major": 3, "minor": 20, "patch": 0 },

  "configurePresets": [
    {
      "name": "ninja-dev",
      "displayName": "Ninja (Dev, Debug, compile_commands at build/)",
      "generator": "Ninja",
      "binaryDir": "build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "ninja-release",
      "displayName": "Ninja Release",
      "generator": "Ninja",
      "binaryDir": "build/ninja-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "msvc-release",
      "displayName": "MSVC 2022 Release",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "build/msvc-release",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],

  "buildPresets": [
    { "name": "ninja-dev",     "configurePreset": "ninja-dev",     "jobs": 0 },
    { "name": "ninja-release", "configurePreset": "ninja-release", "jobs": 0 },
    { "name": "msvc-release",  "configurePreset": "msvc-release",  "configuration": "Release", "jobs": 0 }
  ]
}

